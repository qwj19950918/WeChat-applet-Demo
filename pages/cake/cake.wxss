page{
  height: 100%;
  background: #f3f3f3;
}
#cake{
  display: flex;
  flex-direction: column;
}
/* 滚动条 */
.cake-top{
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #fff;
  box-sizing: border-box;
  padding: 0 15rpx;
}
.cake-top-icon{
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}
.cake-top-icon image{
  width: 100%;
  height: 100%;
}
.cake-top-text{
  width: 100%;
  height: 100%;
  line-height: 80rpx;
  font-size: 26rpx;
  color: #000;
}
.cake-top-swiper{
  width: 100%;
  height: 100%;
}
/* 轮播 */
.cake-banner{
  width: 100%;
  height: 350rpx;
}
.swiper{
  width: 100%;
  height: 100%;
}
.swiper image{
  width: 100%;
  height: 100%;
}
/* 导航 */
.cake-nav{
  width: 100%;
  height: 220rpx;
  background: #fff;
  box-sizing: border-box;
  white-space:nowrap;
  overflow: hidden;
  padding: 0 15rpx;
}
.cake-navBox{
  width: 100%;
  height: 220rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;
}
.cake-navList{
  width: 20%;
  height: 120rpx;
  text-align: center;
  font-size: 25rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  margin: 0 4.5%;
}
.cake-navList image{
  width: 90rpx;
  height: 90rpx;
}
/* 展示 */
.cake-show{
  width: 100%;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.cake-show image{
  width: 100%;
  height: 100%;
}
.cake-showT{
  width: 100%;
  height: 500rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.cake-showL{
  height: 100%;
  width: 250rpx;
  background: yellow;
  margin-right: 10rpx;
}
.cake-showR{
  height: 100%;
  width: 490rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.cacke-showR-top{
  width: 100%;
  height: 49%;
  background: gold
}
.cacke-showR-bottom{
  width: 100%;
  height: 49%;
  background: goldenrod;
}
.cake-showB{
  margin-top: 10rpx;
  width: 100%;
  height: 610rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.cake-showB-top{
  width: 100%;
  height: 300rpx;
  background: red;
}
.cake-showB-bottom{
  width: 100%;
  height: 300rpx;
  background: green;
}